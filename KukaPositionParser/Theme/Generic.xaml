<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:behaviors="clr-namespace:KukaPositionParser.UI.Behaviors"
                     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/KukaPositionParser;component/Theme/OptionsTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="WindowStyle" TargetType="{x:Type mah:MetroWindow}" BasedOn="{StaticResource MaterialDesignWindow}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="TitleForeground" Value="#FF000000"/>
        <Setter Property="AllowDrop" Value="True"/>
        <Setter Property="GlowBrush" Value="{DynamicResource MahApps.Brushes.Accent}"/>
        <Setter Property="WindowTransitionsEnabled" Value="False"/>
        <Setter Property="behaviors:FileDragDropBehavior.IsFileDragDropEnabled" Value="True"/>
    </Style>
</ResourceDictionary>